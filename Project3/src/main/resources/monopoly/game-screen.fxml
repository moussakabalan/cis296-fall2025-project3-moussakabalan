<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="monopoly.GameController"
            style="-fx-background-color: #e8f5e9;">
    
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
            </padding>
            
            <Label text="MONOPOLY BOARD">
                <font>
                    <Font name="Arial Bold" size="24.0"/>
                </font>
            </Label>
            
            <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: white;">
                <GridPane fx:id="boardGrid" alignment="CENTER" hgap="5.0" vgap="5.0"
                          style="-fx-background-color: white; -fx-padding: 20;">
                </GridPane>
            </ScrollPane>
            
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Dice:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="dice1Label" text="0" 
                       style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10; -fx-font-size: 20px; -fx-font-weight: bold; -fx-min-width: 50; -fx-alignment: center;"/>
                <Label fx:id="dice2Label" text="0"
                       style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10; -fx-font-size: 20px; -fx-font-weight: bold; -fx-min-width: 50; -fx-alignment: center;"/>
            </HBox>
            
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="rollDiceButton" text="Roll Dice" onAction="#onRollDice"
                        prefWidth="120.0" prefHeight="40.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Button fx:id="buyButton" text="Buy Property" onAction="#onBuy"
                        prefWidth="120.0" prefHeight="40.0"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Button fx:id="declineButton" text="Decline" onAction="#onDecline"
                        prefWidth="120.0" prefHeight="40.0"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Button fx:id="buildButton" text="Build" onAction="#onBuild"
                        prefWidth="120.0" prefHeight="40.0"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </HBox>
            
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="saveButton" text="Save Game" onAction="#onSave"
                        prefWidth="120.0" prefHeight="35.0"
                        style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                <Button fx:id="exitButton" text="Exit to Menu" onAction="#onExit"
                        prefWidth="120.0" prefHeight="35.0"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>
    
    <right>
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 2;">
            <padding>
                <Insets top="20.0" bottom="20.0" left="15.0" right="15.0"/>
            </padding>
            
            <ScrollPane fitToWidth="true" prefHeight="350.0" prefWidth="250.0">
                <VBox fx:id="playerInfoBox" spacing="10.0"/>
            </ScrollPane>
            
            <Separator/>
            
            <Label text="Game Messages">
                <font>
                    <Font name="Arial Bold" size="14.0"/>
                </font>
            </Label>
            
            <TextArea fx:id="messageArea" editable="false" wrapText="true"
                      prefHeight="300.0" prefWidth="250.0"
                      style="-fx-control-inner-background: #f9f9f9;"/>
        </VBox>
    </right>
</BorderPane>


